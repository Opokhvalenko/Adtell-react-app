{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",

	"formatter": { "enabled": true },

	"linter": {
		"enabled": true,
		"rules": { "recommended": true }
	},

	"files": {
		"includes": [
			"**",
			"!node_modules",
			"!dist",
			"!build",
			"!.vite",
			"!.cache",
			"!src/tailwind.css",
			"!public/prebid",
			"!src/index.css",
			"dist/",
			"!build/",
			"!public/assets",
			"!src/tailwind.css",
			"!**/*.min.css",
			"!public/assets",
			"!src/ssr/embed.css"
		],
		"ignoreUnknown": false
	},

	"overrides": [
		{
			"includes": ["**/*.css"],
			"linter": {
				"rules": {
					"suspicious": {
						"noUnknownAtRules": "off"
					}
				}
			}
		}
	]
}
