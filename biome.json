{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",

	"formatter": { "enabled": true },
	"linter": {
		"enabled": true,
		"rules": { "recommended": true }
	},

	"files": {
		"includes": ["**", "!node_modules", "!dist", "!build", "!.vite", "!.cache"],
		"ignoreUnknown": false
	},

	"overrides": [
		{
			"includes": ["**/*.css"],
			"linter": {
				"rules": {
					"suspicious": {
						"noUnknownAtRules": "off"
					}
				}
			}
		}
	]
}
